<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WeightFragment">


    <EditText
        android:id="@+id/toOutput"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|center"
        android:layout_marginStart="452dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="147dp"
        android:enabled="false"
        android:maxLines="1" />

    <Spinner
        android:id="@+id/toValues"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_above="@+id/toOutput"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|center"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="41dp"
        android:theme="@style/SpinnerScrollBar" />

    <Spinner
        android:id="@+id/fromValues"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_above="@+id/fromInput"
        android:layout_alignParentStart="true"
        android:layout_gravity="center|center"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="41dp"
        android:theme="@style/SpinnerScrollBar" />

    <EditText
        android:id="@+id/fromInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|center"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="149dp"
        android:ems="10"
        android:hint="@string/insert_value"
        android:inputType="number" />

</RelativeLayout>